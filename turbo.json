{
    "$schema": "https://turbo.build/schema.json",
    "globalDotEnv": [".env"],
    "globalEnv": ["DATABASE_URL", "REDIS_URL", "API_HOST", "API_PORT"],
    "pipeline": {
        "build": {
            "dependsOn": ["^build"],
            "outputs": ["dist/**"],
            "dotEnv": [".env.production.local", ".env.production", ".env.local", ".env"]
        },
        "lint": {
            "dependsOn": ["^lint"]
        },
        "dev": {
            "cache": false,
            "persistent": true,
            "dotEnv": [".env.development.local", ".env.development", ".env.local", ".env"]
        }
    }
}
