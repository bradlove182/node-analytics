{
    "$schema": "https://turbo.build/schema.json",
    "globalEnv": ["*"],
    "globalDependencies": [".env"],
    "tasks": {
        "build": {
            "dependsOn": ["^build"],
            "outputs": ["dist/**", ".svelte-kit/**"]
        },
        "lint": {
            "dependsOn": ["^lint"]
        },
        "dev": {
            "dependsOn": ["setup:dev", "db:migrate"],
            "cache": false,
            "persistent": true
        },
        "setup:dev": {
            "cache": false
        },
        "db:migrate": {
            "outputs": ["src/database/migrations/**"],
            "cache": false
        },
        "db:studio": {
            "dependsOn": ["setup:dev", "db:migrate"],
            "cache": false,
            "persistent": true
        }
    }
}
