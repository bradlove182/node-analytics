{
    "$schema": "https://turbo.build/schema.json",
    "globalDependencies": ["**/.env.*local", ".env", ".env.local", "tsconfig.json"],
    "globalEnv": ["DATABASE_URL"],
    "pipeline": {
        "build": {
            "dependsOn": ["^build"],
            "outputs": [".next/**", "!.next/cache/**"]
        },
        "lint": {
            "dependsOn": ["^lint"]
        },
        "dev": {
            "cache": false,
            "persistent": true,
            "env": ["POSTGRES_URL"]
        }
    }
}
