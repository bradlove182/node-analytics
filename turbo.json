{
    "$schema": "https://turbo.build/schema.json",
    "globalDotEnv": [".env"],
    "globalEnv": ["*"],
    "tasks": {
        "build": {
            "dependsOn": ["^build"],
            "outputs": ["dist/**", ".svelte-kit/**"],
            "dotEnv": [".env.production.local", ".env.production", ".env.local", ".env"]
        },
        "lint": {
            "dependsOn": ["^lint"]
        },
        "dev": {
            "dependsOn": ["setup:dev", "db:migrate", "db:view"],
            "cache": false,
            "persistent": true,
            "dotEnv": [".env.development.local", ".env.development", ".env.local", ".env"]
        },
        "setup:dev": {
            "cache": false
        },
        "db:migrate": {
            "outputs": ["src/database/migrations/**"],
            "cache": false
        },
        "db:view": {
            "cache": false
        }
    }
}
